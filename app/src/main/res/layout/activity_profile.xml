<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:id="@+id/imgTonyStark"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_margin="20dp"
      android:src="@drawable/tony_stark_new"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Stark"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tonystark@gmail.com"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtName"
        android:textColor="#000000"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 1115555"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtEmail"
        android:layout_marginTop="15dp"/>
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="More Information"
      android:id="@+id/txtMoreInfo"
      android:textColor="#ffffff"
      android:background="#1565c0"
      android:textSize="18sp"
      android:textStyle="bold"
      android:layout_below="@id/imgTonyStark"
      android:layout_margin="20dp"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Exit the App"
      android:id="@+id/txtExitApp"
      android:backgroundTint="#F44336"
      android:textColor="#ffffff"

      android:textSize="18sp"
      android:textStyle="bold"
      android:layout_alignParentBottom="true" />

</RelativeLayout>